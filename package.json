{
  "name": "codigo-postal-cli",
  "version": "2.0.4",
  "description": "Get postal code from Correos de Chile CLI",
  "main": "src",
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js'",
    "commit": "commit",
    "pretest": "npm run lint -s && npm run format -s",
    "test": "istanbul cover _mocha",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags && npm publish",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags && npm publish",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags && npm publish"
  },
  "engines": {
    "node": ">=8"
  },
  "bin": {
    "codigo-postal": "src/index.js"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/codigo-postal-cli.git"
  },
  "keywords": [
    "codigo postal",
    "postal code",
    "zip",
    "chile",
    "cli"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/codigo-postal-cli/issues"
  },
  "homepage": "https://github.com/lgaticaq/codigo-postal-cli#readme",
  "dependencies": {
    "chalk": "2.4.1",
    "clipboardy": "1.2.3",
    "codigo-postal": "2.0.5",
    "commander": "2.18.0",
    "update-notifier": "2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.1.2",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/prompt-cli": "7.1.2",
    "chai": "4.1.2",
    "eslint": "5.6.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "generate-changelog": "1.7.1",
    "husky": "1.0.0-rc.14",
    "istanbul": "0.4.5",
    "lint-staged": "7.2.2",
    "mocha": "5.2.0",
    "prettier-standard": "8.0.1",
    "proxyquire": "2.1.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "mocha": true
    },
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ],
      "test/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
